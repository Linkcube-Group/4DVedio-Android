<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_relativelayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mobileshake_bg" >

    <ImageView
        android:id="@+id/banner_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:scaleType="fitStart"
        android:src="@drawable/banner" />

    <me.linkcube.FourDVedio.widget.SingleStatusBarView
        android:id="@+id/status_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:visibility="gone" >
    </me.linkcube.FourDVedio.widget.SingleStatusBarView>

    <ImageView
        android:id="@+id/shakemode_txt"
        android:layout_width="280dp"
        android:layout_height="190dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/mobilemode_txt"
        android:scaleType="fitStart" >
    </ImageView>
    <!-- 下方Tab -->

    <LinearLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/tab_bg"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/mobileShake_bt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/mobileshake_grey"
            android:padding="0dp" />

        <ImageButton
            android:id="@+id/toyShake_bt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/toyshake" />
    </LinearLayout>

    <ImageView
        android:id="@+id/mobile_icon_iv"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_above="@id/tabs"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="32dp"
        android:background="@drawable/icon_mobile" />

    <me.linkcube.FourDVedio.widget.VoiceModeView
        android:id="@+id/voice_mode_view"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_above="@id/tabs"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="22dp"
        android:clickable="true"
        android:visibility="gone" >
    </me.linkcube.FourDVedio.widget.VoiceModeView>

</RelativeLayout>